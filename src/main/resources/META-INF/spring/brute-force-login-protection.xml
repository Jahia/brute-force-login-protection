<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="IpCacheManager" class="org.jahia.modules.bruteforceloginprotection.cache.IpCacheManager" init-method="start" destroy-method="stop"/>
    
    <bean id="MyCustomAuthValve" class="org.jahia.modules.bruteforceloginprotection.MyCustomAuthValve" depends-on="IpCacheManager">
        <!--<property name="positionAfter" value="SessionAuthValve"/>-->
        <property name="position" value="0"/>
        <property name="mailService" ref="MailService"/>
        <property name="ipCacheManager" ref="IpCacheManager"/>
    </bean>   
</beans>